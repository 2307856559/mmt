<link rel="stylesheet" href="#{getContextPath}bootstrap/select/css/bootstrap-select.min.css">

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title"><span class="glyphicon glyphicon-plus-sign"></span> 添加菜单</h4>
</div>
<div class="modal-body">
		<div class="well">
			<div class="form-group row">
				<label for="supmenucod" class="col-lg-3 control-label" style="padding:6px;">上级菜单</label>
				<div class="col-lg-9">
					<select class="selectpicker" id="supmenucod" data-width="100%">
						<option>Mustard</option>
					    <option>Ketchup</option>
					    <option>Relish</option>
					</select>
				</div>
			</div>
			<div class="form-group row">
				<label for="menu_name" class="col-lg-3 control-label" style="padding:6px;">菜单名称</label>
				<div class="col-lg-9">
					<input type="text" class="form-control" id="menu_name" />
				</div>
			</div>
			<div class="form-group row">
				<label for="menuurl" class="col-lg-3 control-label" style="padding:6px;">菜单链接</label>
				<div class="col-lg-9">
					<input type="text" class="form-control" id="menuurl" />
				</div>
			</div>
			<div class="form-group row">
				<label for="menuico" class="col-lg-3 control-label" style="padding:6px;">菜单样式</label>
				<div class="col-lg-9">
					<input type="text" class="form-control" id="menuico" />
				</div>
			</div>
			<div class="form-group row">
				<label for="sort" class="col-lg-3 control-label" style="padding:6px;">排序号</label>
				<div class="col-lg-9">
					<input type="number" class="form-control" id="sort" />
				</div>
			</div>
		</div>
  	</div>
  	<div class="modal-footer">
    	<button type="button" data-dismiss="modal" class="btn btn-default">关 闭</button>
    	<button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> 保 存</button>
  	</div>
<script src="#{getContextPath}bootstrap/select/js/bootstrap-select.min.js"></script>
<script>$('select').selectpicker();</script>